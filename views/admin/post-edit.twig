{% extends 'templates/admin.twig' %}

{% block title %}Edit Post - {% endblock %}

{% block pageheader %}Edit Post{% endblock %}

{% block content %}
    <div class="box box-primary">
        <form method="post" autocomplete="off" action="/post/{{ article.id }}/edit">
            <div class="box-body">
                <div class="form-group {{ errors.title ? 'has-error': '' }}">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{ article.title}}">
                    {% if errors.title %}
                        <span class="help-block">{{ errors.title|first }}</span>
                    {% endif %}
                </div>
                <div class="form-group {{ errors.content ? 'has-error': '' }}">
                    <textarea name="content" class="form-control" placeholder="Content" rows="10">{{ article.content }}</textarea>
                    {% if errors.content %}
                        <span class="help-block">{{ errors.content|first }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary center-block">Submit</button>
            </div>
        </form>
    </div>
{% endblock %}