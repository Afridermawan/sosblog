{% extends 'templates/admin.twig' %}

{% block title %}Edit Post - {% endblock %}

{% block pageheader %}Edit Post{% endblock %}

{% block content %}

    <div class="box box-primary">
    {% if errors %}
     <span class="help-block">{{ errors | first }}</span>
    {% endif %}

        <form method="post" autocomplete="off" action="{{base_url()}}/user/{{user.id}}/edit">
            <div class="box-body">
                <div class="form-group">
                    <input type="text" name="username" class="form-control" placeholder="Username" value="{{ user.username}}">
                </div>
                <div class="form-group">
                    <input type="text" name="email" class="form-control" placeholder="Email" value="{{ user.email}}">
                </div>
                <div class="form-group">
                    <input type="password" name="old-password" class="form-control" placeholder="Password Lama">
                </div>
                <div class="form-group">
                    <input type="password" name="new-password" class="form-control" placeholder="Password Baru">
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-default center-block">Submit</button>
            </div>
        </form>
    </div>
{% endblock %}
