{% extends 'templates/admin.twig' %}

{% block title %}Add New Post - {% endblock %}

{% block pageheader %}Add Post{% endblock %}

{% block content %}
    <div class="box box-primary">
        <form method="post" autocomplete="off" action="{{ path_for('post.add') }}">
            <div class="box-body">
                <div class="form-group {{ errors.title ? 'has-error': '' }}">
                    <input type="text" name="title" class="form-control" placeholder="Title">
                    {% if errors.title %}
                        <span class="help-block">{{ errors.title|first }}</span>
                    {% endif %}
                </div>
                <div class="form-group {{ errors.content ? 'has-error': '' }}">
                    <textarea name="content" class="form-control" placeholder="Content" rows="10"></textarea>
                    {% if errors.content %}
                        <span class="help-block">{{ errors.content|first }}</span>
                    {% endif %}
                </div>
                <div class="form-group">
                    <select class="form-control" id="tag" name="tag[]" multiple="multiple">
                        {% if tag %}
                            {% for tag in tag %}
                                <option value="{{tag.id}}">{{tag.tags}}</option>
                            {% endfor %}
                        {% endif %}
                    </select>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary center-block"><i class="fa fa-reply"></i> Submit</button>
            </div>
        </form>
    </div>
{% endblock %}
