{% extends 'templates/admin.twig' %}

{% block title %}See All - {% endblock %}

{% block pageheader %}All List Publish Post{% endblock %}

{% block content %}
    <div class="box box-primary">
        <div class="box-body">
            <table class="table table-bordered table-striped">
                <tr>
                    <th class="text-center">Title</th>
                    <th class="text-center">Writter</th>
                    <th style="width: 40px">View</th>
                    <th style="width: 40px">Edit</th>
                    <th style="width: 40px">Delete</th>
                </tr>
                {% for article in article %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td>{{ article.user.username }}</td>
                        <td class="text-center"><a target="_blank" href="{{ path_for('post.read', {('id'):article.id}) }}"><i class="fa fa-eye"></i></a></td>
                        <td class="text-center"><a href="{{ path_for('post.edit', {('id'):article.id} ) }}"><i class="fa fa-pencil"></i></a></td>
                        <td class="text-center"><a href="{{ path_for('post.delete', {('id'):article.id} ) }}"><i class="fa fa-trash"></i></a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="box-footer clearfix">
            <ul class="pagination pagination-sm no-margin pull-right">
                <li><a href="#">&laquo;</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">&raquo;</a></li>
            </ul>
        </div>
    </div>    
{% endblock %}
